{
  "name": "Netflix Usage Stats",
  "version": "0.2.0",
  "description": "Shows Netflix usage stats to know about how you spend your time on Netflix.",
  "permissions": ["activeTab", "declarativeContent", "*://*.netflix.com/*", "https://www.netflix.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/viewingactivity?stats=true"
      ],
      "js": ["vendor/i18next.min.js", "vendor/lodash.min.js", "vendor/chart.min.js", "stats.js"],
      "css": ["material-icons.css", "stats.css"]
    },
    {
      "matches": [
        "https://www.netflix.com/YourAccount*"
      ],
      "js": ["account.js"]
    }
  ],
  "web_accessible_resources": ["stats.html"],
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "manifest_version": 2
}
