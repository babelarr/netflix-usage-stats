{
  "name": "__MSG_extensionTitle__",
  "version": "1.2.0",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "permissions": ["activeTab", "declarativeContent", "*://*.netflix.com/*", "https://www.netflix.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.netflix.com/viewingactivity?stats=true"
      ],
      "js": [
        "vendor/js/lodash.min.js", 
        "vendor/js/chart.min.js", 
        "vendor/js/jquery.min.js", 
        "vendor/js/purify.min.js",
        "utils/template.js",
        "utils/loader.js",
        "utils/activity.js",
        "utils/stats.js",
        "utils/chart.js",
        "utils/viewing.js",
        "utils/format.js",
        "utils/debug.js",
        "dashboard/dashboard.js"],
      "css": [
        "vendor/css/material-icons.css", 
        "dashboard/dashboard.css"],
      "run_at": "document_start"
    },
    {
      "matches": [
        "https://www.netflix.com/YourAccount*"
      ],
      "js": ["account.js"]
    }
  ],
  "web_accessible_resources": [
    "dashboard/dashboard.html",
    "empty.html",
    "error.html"
  ],
  "page_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "manifest_version": 2
}
